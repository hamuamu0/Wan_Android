<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">


        <TextView
            android:id="@+id/txt_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="18dp"
            android:minHeight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="新"
            android:textSize="12sp"
            android:gravity="center"
            android:background="@drawable/txt_solid"
            android:textColor="@color/red"
            android:padding="2dp"
            />

        <TextView
            android:id="@+id/txt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#b2b2b2"
            android:layout_toRightOf="@id/txt_tag"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="aaaa"/>

        <TextView
            android:id="@+id/txt_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:textColor="#b2b2b2"
            android:textSize="12sp"
            android:text="1天前"

            />

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_tag"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#394047"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:text="aaaaaaaaaaaaaaaaaaaaa"/>

        <TextView
            android:id="@+id/txt_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="#b2b2b2"
            android:text="基础知识 / 基础概念"
            />
        <ImageView
            android:id="@+id/img_love"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_favorite_gray_24dp"/>
    </RelativeLayout>



</androidx.cardview.widget.CardView>